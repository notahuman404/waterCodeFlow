{
  "name": "watercodeflow",
  "displayName": "WaterCodeFlow",
  "description": "Time-travel debugger with execution recording and variable inspection",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/notahuman404/waterCodeFlow"
  },
  "categories": ["Debuggers", "Other"],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:python",
    "onCommand:watercodeflow.startRecording",
    "onCommand:watercodeflow.stopRecording",
    "onCommand:watercodeflow.openInspector",
    "onCommand:watercodeflow.openInsights",
    "onView:watercodeflow.recordings",
    "onView:watercodeflow.variables",
    "onView:watercodeflow.branches",
    "workspaceContains:.codevovle/state.json"
  ],
  "contributes": {
    "commands": [
      {
        "command": "watercodeflow.startRecording",
        "title": "Start Recording",
        "category": "WaterCodeFlow"
      },
      {
        "command": "watercodeflow.stopRecording",
        "title": "Stop Recording",
        "category": "WaterCodeFlow"
      },
      {
        "command": "watercodeflow.openInspector",
        "title": "Open Variable Inspector",
        "category": "WaterCodeFlow"
      },
      {
        "command": "watercodeflow.openInsights",
        "title": "View Insights",
        "category": "WaterCodeFlow"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "watercodeflow-explorer",
          "title": "WaterCodeFlow",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "watercodeflow-explorer": [
        {
          "type": "webview",
          "id": "watercodeflow.recordings",
          "name": "Recordings",
          "when": "resourceLangId == python"
        },
        {
          "type": "webview",
          "id": "watercodeflow.variables",
          "name": "Variables",
          "when": "resourceLangId == python"
        },
        {
          "type": "webview",
          "id": "watercodeflow.branches",
          "name": "Branches",
          "when": "resourceLangId == python"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --platform=node --target=node20 --format=cjs",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  }
}
